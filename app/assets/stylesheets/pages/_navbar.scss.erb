.navbar-jj {
  display: flex;
  background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path 'space.jpg' %>);
  justify-content: space-between;
  border-bottom: solid white 1px;
  .navbar-collapse {
    flex-grow: 0;
  }
  h1 {
    font-size: clamp(28px, 4vw, 48px);
  }
  @media(max-width: 560px) {
    .nav-center {
      flex: 0 0 100%;
      text-align: center;
      order: 2;
    }
  }
}
