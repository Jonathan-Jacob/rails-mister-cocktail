<div class="container-cocktail">
  <h1><%= @cocktail.name %></h1>
  <ul>
  <% @cocktail.doses.sort_by { |i| i.ingredient.name.upcase }.each do |dose| %>
    <li><%= "#{dose.description} of #{dose.ingredient.name} | "%><%= link_to 'delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
  </ul>
  <%= link_to 'add ingredient', new_cocktail_dose_path(@cocktail) %>
  <br>
  <div class="card-cocktail" style="--bs-aspect-ratio: 50%;">
    <%= cl_image_tag @cocktail.photo.key, aspect_ratio: 1.77777777778, crop: :fill %>
  </div>
</div>
